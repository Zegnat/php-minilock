{
    "name": "zegnat/minilock",
    "type": "library",
    "description": "Implementation of reading and writing the miniLock file format.",
    "keywords": [
        "miniLock",
        "encryption"
    ],
    "homepage": "https://github.com/Zegnat/php-minilock",
    "license": "0BSD",
    "authors": [
        {
            "name": "Martijn van der Ven",
            "email": "martijn@vanderven.se",
            "homepage": "https://vanderven.se/martijn/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.0",
        "ext-blake2": "*",
        "ext-mbstring": "*",
        "ext-scrypt": "*",
        "ext-sodium": "*",
        "tuupola/base58": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Zegnat\\MiniLock\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
